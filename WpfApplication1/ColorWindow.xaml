        <Image x:Name="ColorData" Height="480" Width="640" 
               MouseLeftButtonUp="ColorData_MouseLeftButtonUp" />
        <Image x:Name="DepthData" Height="60" Width="80" VerticalAlignment="Top"/>
    </StackPanel>     
</Window>
